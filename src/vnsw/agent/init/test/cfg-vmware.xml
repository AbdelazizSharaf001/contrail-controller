<?xml version="1.0" encoding="utf-8"?>
<config>
    <agent>
        <vhost>
            <name>vhost0</name>
            <!-- IP Address is optional. Agent can read from kernel on start -->
            <ip-address>10.1.1.1/24</ip-address>
            <gateway>10.1.1.254</gateway>
        </vhost>
        <eth-port>
            <name>vnet0</name>
        </eth-port>
        <hypervisor mode="vmware">
            <port> vmport </port>
        </hypervisor>
    </agent>
</config>
